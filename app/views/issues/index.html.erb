<h1>Listing issues</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Closed</th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.name %></td>
    <td><%= issue.closed %></td>
    <td><%= link_to 'Close', issue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
